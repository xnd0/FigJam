  <!-- Form for posting a song -->
  <div class="add-song-container">
    <h2>
      What are you listening to right now?
    </h2>
    <form class="login-form">
      <label for="song_name">
        Song Name:
      </label>
      <br />
      <br>
      <textarea id="song_name" name="song_name" rows="2" cols="30">
        </textarea>
        <br>
      <label for="artist_name">
        Artist Name:
      </label>
      <br />
      <br>
      <textarea id="artist_name" name="artist_name" rows="2" cols="30">
    </textarea>
      <br />
      <label for="comment">
        your comment:
      </label>
      <br />
      <textarea id="comment" name="comment" rows="5" cols="30">
    </textarea>
      <br />
      <label for="username">
        User Name:
      </label>
      <br />
      <textarea id="user_name" name="user_name" rows="2" cols="30">
    </textarea>
      <br />
      <br />
      <button id="upload_widget" class="cloudinary-button">Upload YouTube URL</button>

      <script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>

      <script type="text/javascript">
        var myWidget = cloudinary.createUploadWidget({
          cloudName: 'deubd4mph',
          uploadPreset: 'paup0jwu'
        }, (error, result) => {
          if (!error && result && result.event === "success") {
            console.log('Done! Here is the image info: ', result.info);
          }
        }
        )

        document.getElementById("upload_widget").addEventListener("click", function () {
          myWidget.open();
        }, false);
      </script>
      <br>
      <br>
      <button type="submit" value="Submit">
        Submit
      </button>
    </form>
  </div>
</div>


