<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FigJam!</title>
  <link rel="stylesheet" href="css/all.css">
  <link rel="stylesheet" href="css/jass.css">
</head>

<div class="menu-container">
  <div class="card-header col-md-12 text-center">
    <h2>
      FigJam
    </h2>
    <text> Share what you're listening to!</text>
    <br>
    <br>
  </div>
  <!-- This is the form for adding a new song -->
  <div class="add-song-container">
    <h2>
      What are you listening to right now?
    </h2>
    <div class="song-photo">
    </div>
    <form class="song-form">
      <label for="song_name">
        Song Name:
      </label>
      <br/>
      <br>
      <textarea id="song_name" name="song_name" rows="2" cols="30" required></textarea>
      <br>
      <label for="artist_name">
        Artist Name:
      </label>
      <br/>
      <br>
      <textarea id="artist_name" name="artist_name" rows="2" cols="30" required></textarea>
      <br/>
      <label for="comment">
        Your Comment:
      </label>
      <br/>
      <br>
      <textarea id="comment_text" name="comment" rows="5" cols="30" required></textarea>
      <br/>
      <br/>
      <br/>
      <button id="upload_widget" class="cloudinary-button">Upload Song Photo</button>
      <script src="https://upload-widget.cloudinary.com/global/all.js" id="img-url" type="text/javascript"></script>
      <br>
      <br>
      <button class="sub-button" id="submitButton" type="submit" value="Submit">
        Submit
      </button>
    </form>
  </div>
</div>

<script src="./js/post.js"></script>